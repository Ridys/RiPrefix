	  <dependency>
		<groupId>org.bstats</groupId>
  		<artifactId>bstats-bukkit</artifactId>
  		<version>1.2</version>
	  </dependency>
  </dependencies>
  <url>https://ci.dmitry.win/job/RiPrefix/</url>
</project>