 		<groupId>tabs</groupId>
 		<artifactId>ColoredTags</artifactId>
 		<version>1</version>
 	  </dependency>
	  <dependency>
		<groupId>libs</groupId>
		<artifactId>Vault</artifactId>
		<version>1.5.6</version>
